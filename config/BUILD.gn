# This config defines the default libraries applied to all targets.
config("default_libs") {
  if (is_win) {
    libs = [ "kernel32.lib" ]
  } else if (is_android) {
    libs = [
      "dl",
      "m",
    ]
  } else if (is_mac) {
    configs = ["//build/config/mac:default_libs"]
